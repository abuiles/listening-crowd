<div class="flex">
  <div class="flex-auto">
    <div class="container">
      <div class="fboard f0">
        {{#each model as |podcast|}}
          <div class="w-25-l w-50-m w-100 dib pa3-ns pb3 f5 v-top">
            <div class="bg-near-white ba b--near-white">
              <div class="relative">
                <img class="img db" src={{podcast.itunesImage}}>
              </div>
              <div class="pa3 cf">
                <div style="max-height:140px;overflow:hidden;">
                  <h3 class="mt0 mb2 f4">{{link-to podcast.title "podcasts.show" podcast class="link"}}</h3>
                  {{!-- the inline style shouldnt be necessary in the future. The literal html is causing this --}}
                  <p class="ma0" style="word-wrap:break-word;">{{podcast.description}}</p>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
