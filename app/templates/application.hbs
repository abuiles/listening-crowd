<nav class="dt w-100 border-box bb b--light-gray pa3 pr4 pl4">
  <div class="dtc-l db cf">
    <img src="/assets/images/lc-logo.svg" class="dib mr2" alt="Site Name" style="width:230px;">
  </div>

  <div class="dtc-l db v-mid w-60-l tr">
    {{link-to "Podcasts" "directory" class="link f6 dib f--h ttu tracked mr3 mr4-ns normal nav_i nav_i--t"}}
