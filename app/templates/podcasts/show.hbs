<div class="clearfix mxn2 border">
  <div class="sm-col sm-col-12 md-col-2  px2">
    <div class="border">
      <img class="p1" src={{model.itunesImage}} style="width: 200px;">
      {{model.title}}
      <ul>
        {{#each model.episodes as |episode|}}
          <li>
            {{link-to episode.title "podcasts.show.episode" model episode}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="sm-col sm-col-12 md-col-8  px2">
    <div class="border">
      {{outlet}}
    </div>
  </div>
  <div class="sm-col sm-col-12 md-col-2  px2">
    <div class="border">
      <h2> something here </h2>
    </div>
  </div>
</div>
