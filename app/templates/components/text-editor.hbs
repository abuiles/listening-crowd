{{#mobiledoc-editor
  mobileDoc=mobileDoc
  cards=cards
  on-change=(action textChanged) as |editor|}}
  <div class="cf toolbar ph0 pv2 ma0 bb b--light-gray w-100">

    <div class="dib pr3 br b--light-gray v-mid">
      <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Heading"
            class="bg-near-white dim btn f6 ph3 mobiledoc-toolbar__button {{if editor.activeSectionTagNames.isH1 'active'}}"
            {{action editor.toggleSection 'h1'}}>
          Headline
        </button>
      </div>
      <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Subheading"
            class="bg-near-white dim btn f6 ph3 mobiledoc-toolbar__button {{if editor.activeSectionTagNames.isH2 'active'}}"
            {{action editor.toggleSection 'h2'}}>
          Subheadline
        </button>
      </div>
    </div>

    <div class="dib ph3 br b--light-gray v-mid">
      <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Bold"
            class="bg-white dim btn mobiledoc-toolbar__button {{if editor.activeMarkupTagNames.isStrong 'active'}}"
            {{action editor.toggleMarkup 'strong'}}>
          <i class="fa fa-bold" aria-hidden="true"></i>
        </button>
      </div>
      <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Italic"
            class="bg-white dim btn mobiledoc-toolbar__button {{if editor.activeMarkupTagNames.isEm 'active'}}"
            {{action editor.toggleMarkup 'em'}}>
          <i class="fa fa-italic" aria-hidden="true"></i>
        </button>
      </div>
    </div>

    <div class="dib ph3 br b--light-gray v-mid">
      <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="List"
            class="bg-white dim btn mobiledoc-toolbar__button {{if editor.activeSectionTagNames.isUl 'active'}}"
            {{action editor.toggleSection 'ul'}}>
          <i class="fa fa-list-ul" aria-hidden="true"></i>
        </button>
      </div>
      <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Numbered List"
            class="bg-white dim btn mobiledoc-toolbar__button {{if editor.activeSectionTagNames.isOl 'active'}}"
            {{action editor.toggleSection 'ol'}}>
          <i class="fa fa-list-ol" aria-hidden="true"></i>
        </button>
      </div>
       <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Quote"
            class="bg-white dim btn mobiledoc-toolbar__button"
            {{action addCard editor "quote-card"}}>
          <i class="fa fa-quote-right" aria-hidden="true"></i>
        </button>
      </div>
      {{!-- <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Pull Quote"
            class="bg-white btn mobiledoc-toolbar__button {{if editor.activeSectionTagNames.isPullQuote 'active'}}"
            {{action editor.toggleSection 'pull-quote'}}>
          Pull-quote
        </button>
      </div> --}}
    </div>

    <div class="dib ph3 br b--light-gray v-mid">
      <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Link"
            class="bg-white dim btn mobiledoc-toolbar__button"
            {{action toggleLink editor}}>
          <i class="fa fa-link" aria-hidden="true"></i>
        </button>
      </div>
      <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Image"
            class="bg-white dim btn mobiledoc-toolbar__button"
            {{action addCard editor "video-card"}}>
          <i class="fa fa-picture-o" aria-hidden="true"></i>
        </button>
      </div>
      <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Youtube Video"
            class="bg-white dim btn mobiledoc-toolbar__button"
            {{action addCard editor "video-card"}}>
          <i class="fa fa-youtube" aria-hidden="true"></i>
        </button>
      </div>
      <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Vimeo Video"
            class="bg-white dim btn mobiledoc-toolbar__button"
            {{action addCard editor "video-card"}}>
          <i class="fa fa-vimeo" aria-hidden="true"></i>
        </button>
      </div>
      <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Spotify link"
            class="bg-white dim btn mobiledoc-toolbar__button"
            {{action addCard editor "song-card"}}>
          <i class="fa fa-spotify" aria-hidden="true"></i>
        </button>
      </div>
    </div>
    <div class="dib pl3 v-mid">
      <div class="dib mobiledoc-toolbar__control">
        <button
            type="button"
            title="Amazon Associates link"
            class="bg-white dim btn mobiledoc-toolbar__button"
            {{action addCard editor "amazon-card"}}>
          <img src="/assets/images/amazon-associates.png" class="db" style="height:27px;">
        </button>
      </div>
    </div>
  </div>

  <div class="ml1">
    {{#if linkOffsets}}
      {{mobiledoc-link-prompt
        on-submit=(action completeLink editor)
        on-cancel=(action (mut linkOffsets) null)}}
    {{/if}}
  </div>
{{/mobiledoc-editor}}
